@model LoginUser


<h2>Login</h2>
<form asp-action="verify" method="post" asp-controller="Home">
    <div class="card-group">
        <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="LoginEmail">Email:</label>
                <input asp-for="LoginEmail" type="email" class="form-control">
                <span class="text-danger" asp-validation-for="LoginEmail"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoginPassword">Password:</label>
                <input asp-for="LoginPassword" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="LoginPassword"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-secondary m-1">Login</button>
            </div>
        </div>
        </div>
    </div>
</form>