@model User

<h2>Register</h2>
<form asp-action="register" method="post" asp-controller="Home">
    <div class="card-group">
        <div class="card">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name">Name:</label>
                <input asp-for="Name" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alias">Alias:</label>
                <input asp-for="Alias" type="text" class="form-control">
                <span class="text-danger" asp-validation-for="Alias"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">Email:</label>
                <input asp-for="Email" type="email" class="form-control">
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
                <div class="form-group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Confirm">Confirm Password:</label>
                    <input asp-for="Confirm" type="text" class="form-control">
                    <span class="text-danger" asp-validation-for="Confirm"></span>
                </div>
                <p>*password should be at least 8 characters</p>
                <div class="form-group">
                    <button type="submit" class="btn btn-secondary m-1">Register</button>
                </div>
            </div>
        </div>
    </div>
</form>